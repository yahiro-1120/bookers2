<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/447ffaa220.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                         aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto"></ul>

            <% if user_signed_in? %>
            <li class="nav-item">
              <i class="fa-solid fa-house"></i>
              <%= link_to "Home", user_path(current_user.id), class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-users"></i>
              <%= link_to "Users", '/users', class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-book-open"></i>
             <%= link_to "Books", '/books', class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>

            <% else %>
            <li class="nav-item">
              <i class="fa-solid fa-house"></i>
              <%= link_to "Home", "/", class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-link"></i>
              <%= link_to "About", "/home/about", class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-user-plus"></i>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
            </li>

            <li class="nav-item">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>

   <footer>
     <div class="container">
       <div class="row">
         <div class="mx-auto">
           <p>CopyRight Infratop.Inc</p>
         </div>
       </div>
     </div>
   </footer>
  </body>
</html>
