<div class="container">
  <div class="row">
    <div class="mx-auto">
      <% if @book.errors.any? %>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

    <h2>Editing Book</h2>
    <%= form_with model: @book do |f| %>

    <h6>Title</h6>
    <%= f.text_field :title %>

    <h6>Opinion</h6>
    <%= f.text_area :body %>


    <%= f.submit 'Update Book', class: "btn btn-lg btn-success" %>

    <% end %>

    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>