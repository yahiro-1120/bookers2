<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(50,50) %>
</div>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

       <div class="row">
         <%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fa-solid fa-user-gear"></i>
         <% end %>
       </div>